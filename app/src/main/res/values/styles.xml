<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    style name="AppTheme" parent="AppTheme.Base" />
    - <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:typeface">serif</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
</style>
    - <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
</style>
    <style name="Beverage" />
    - <style name="TitleStyle" parent="Beverage">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/beverage_title_max_size</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:singleLine">true</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:textSize">@dimen/menu_item_size_txt</item>
</style>
    - <style name="ItemHorizontalListStyle" parent="Beverage">
    <item name="android:layout_width">@dimen/beverage_item_w</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:padding">5dp</item>
</style>
    - <style name="TitleBeverage">
    <item name="android:textColor">@color/text_grey</item>
    <item name="android:textAllCaps">true</item>
</style>
    - <style name="TitleItemSlideMenu" parent="TitleBeverage">
    <item name="android:layout_height">@dimen/menu_height</item>
    <item name="android:layout_width">@dimen/menu_width</item>
    <item name="android:textSize">@dimen/menu_text_size</item>
    <item name="android:gravity">center_vertical</item>
</style>
    - <style name="TitleItemSlideMenuWithPadding" parent="TitleItemSlideMenu">
    <item name="android:paddingLeft">@dimen/menu_big_padding_left</item>
</style>
    - <style name="ItemTitle">
    <item name="android:textSize">24dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:layout_margin">10dp</item>
</style>

</resources>
