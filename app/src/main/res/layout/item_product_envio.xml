<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivProductPhoto_IP"
        android:layout_margin="@dimen/default_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvProductName_IP"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivProductPhoto_IP"
        android:textAllCaps="true"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/ivDeleteProduct_IP"
        android:layout_toStartOf="@+id/ivDeleteProduct_IP" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivDeleteProduct_IP"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/shop_default_magin"
        android:layout_marginBottom="@dimen/shop_default_magin"
        android:layout_marginLeft="@dimen/shop_default_magin"
        android:src="@drawable/btn_circle_delete" />
</RelativeLayout>