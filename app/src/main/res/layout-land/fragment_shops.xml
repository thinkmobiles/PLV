<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vaciar"
            android:id="@+id/tvClearShopList_FS"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:drawableLeft="@drawable/btn_delete"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locales"
            android:id="@+id/tvLocales_FS"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:paddingTop="@dimen/abc_action_bar_subtitle_bottom_margin_material"
            android:paddingBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVolver_FS"
            android:src="@drawable/btn_volver"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvLocales_FS"
            android:layout_toEndOf="@+id/tvLocales_FS"
            android:layout_marginLeft="@dimen/action_bar_title_txt"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="right"
        android:background="@android:color/black"></FrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvShopContainer_FS" />
</LinearLayout>