<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlBackground_FC">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivBackground_FC"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/fragment_padding_top_bottom"
            android:layout_marginLeft="@dimen/fragment_padding_left_right"
            android:layout_marginTop="@dimen/fragment_padding_top_bottom"
            android:layout_marginRight="@dimen/fragment_padding_left_right"
            android:layout_weight="1"
            android:paddingRight="@dimen/default_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnVolver_FC"
                android:paddingTop="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:paddingBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:src="@drawable/btn_volver"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_gravity="center_vertical"
                android:layout_alignTop="@+id/ivAddEnvio_FC"
                android:layout_alignBottom="@+id/ivAddEnvio_FC"
                android:background="@android:color/white" />

            <ImageView
                android:id="@+id/ivAddEnvio_FC"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_toRightOf="@id/btnVolver_FC"
                android:src="@drawable/btn_add_envio" />

            <ImageView
                android:id="@+id/ivLess_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvCount_FC"
                android:layout_toLeftOf="@+id/tvCount_FC"
                android:src="@drawable/btn_less"
                android:layout_marginRight="@dimen/default_margin" />

            <ImageView
                android:id="@+id/ivMore_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_toLeftOf="@+id/tvCount_FC"
                android:src="@drawable/btn_more"
                android:layout_marginRight="@dimen/default_margin" />

            <ImageView
                android:id="@+id/ivAddCarrita_FC"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_cart" />

            <TextView
                android:id="@+id/tvCount_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivAddCarrita_FC"
                android:background="@drawable/bg_count_products"
                android:gravity="center"
                android:text="@string/zero"
                android:layout_marginRight="@dimen/default_margin" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/llContHigh"
                android:layout_above="@+id/llContLow"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/llContLow"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>