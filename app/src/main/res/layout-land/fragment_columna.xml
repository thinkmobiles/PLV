<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlBackground_FC">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivBackground_FC"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/corner_spv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/fragment_padding_top_bottom"
            android:layout_marginLeft="@dimen/fragment_padding_left_right"
            android:layout_marginTop="@dimen/fragment_padding_top_bottom"
            android:layout_weight="1"
            android:paddingRight="@dimen/default_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnVolver_FC"
                android:paddingTop="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:paddingBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:src="@drawable/btn_volver"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_gravity="center_vertical"
                android:layout_alignTop="@+id/ivAddEnvio_FC"
                android:layout_alignBottom="@+id/ivAddEnvio_FC"/>

            <ImageView
                android:id="@+id/ivAddEnvio_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnVolver_FC"
                android:src="@drawable/btn_add_envio" />

            <ImageView
                android:id="@+id/ivLess_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvCount_FC"
                android:layout_toLeftOf="@+id/tvCount_FC"
                android:src="@drawable/btn_less"
                android:layout_marginRight="@dimen/default_margin" />

            <ImageView
                android:id="@+id/ivMore_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_toLeftOf="@+id/tvCount_FC"
                android:src="@drawable/btn_more"
                android:layout_marginRight="@dimen/default_margin" />

            <ImageView
                android:id="@+id/ivAddCarrita_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_cart" />

            <TextView
                android:id="@+id/tvCount_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivAddCarrita_FC"
                android:background="@drawable/bg_count_products"
                android:gravity="center"
                android:text="@string/zero"
                android:layout_marginRight="@dimen/default_margin" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/llContHigh"
                android:layout_above="@+id/llContLow"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/llContLow"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/fragment_padding_top_bottom"
            android:layout_marginRight="@dimen/fragment_padding_left_right"
            android:layout_marginTop="@dimen/fragment_padding_top_bottom"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/bg_extra">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:text="@string/galeria"
                    android:textSize="@dimen/size_text_galeria"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/ivPhotoGal1_FC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_weight="1"
                    android:background="#335428" />

                <ImageView
                    android:id="@+id/ivPhotoGal2_FC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_weight="1"
                    android:background="#335428" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/default_margin"
                android:text="@string/columna"
                android:textSize="@dimen/size_text_name_columna"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNameColumna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textAllCaps="true"
                android:textSize="@dimen/size_text_name_columna"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="hnfvhn" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>