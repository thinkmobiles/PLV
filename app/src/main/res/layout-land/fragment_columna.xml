<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlBackground_FC">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivBackground_FC" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/corner_spv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnVolver_FC"
                android:paddingTop="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:paddingBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:src="@drawable/btn_volver"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_alignTop="@+id/ivAddEnvio_FC"
                android:layout_alignBottom="@+id/ivAddEnvio_FC" />

            <ImageView
                android:id="@+id/ivAddEnvio_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnVolver_FC"
                android:src="@drawable/btn_add_envio" />

            <ImageView
                android:id="@+id/ivLess_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvCount_FC"
                android:layout_toLeftOf="@+id/tvCount_FC"
                android:src="@drawable/btn_less"
                android:layout_marginRight="10dp" />

            <ImageView
                android:id="@+id/ivMore_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_toLeftOf="@+id/tvCount_FC"
                android:src="@drawable/btn_more"
                android:layout_marginRight="10dp" />

            <ImageView
                android:id="@+id/ivAddCarrita_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_cart" />

            <ImageView
                android:id="@+id/ivColumnaAward_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/tvCount_FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivAddCarrita_FC"
                android:background="@drawable/bg_count_products"
                android:gravity="center"
                android:text="0"
                android:layout_marginRight="10dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="#111122">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/galeria"
                    android:textSize="25sp"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/ivPhotoGal1_FC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/ivPhotoGal2_FC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:text="@string/columna"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNameColumna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:text="New Text"
                android:textAllCaps="true"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>